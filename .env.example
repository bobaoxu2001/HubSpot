# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brand_visibility
POSTGRES_USER=bv_admin
POSTGRES_PASSWORD=bv_secret_local

# --- LLM API Keys ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...

# --- Model overrides (optional) ---
# OPENAI_MODEL=gpt-4o
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# PERPLEXITY_MODEL=sonar-pro
# EMBEDDING_MODEL=text-embedding-3-small

# --- Pipeline ---
PIPELINE_BATCH_SIZE=10
PIPELINE_RETRIES=3
LLM_TIMEOUT=120
LLM_MAX_CONCURRENCY=5

# --- Scoring weights (AISOV) ---
# W_MENTION=0.30
# W_RANK=0.25
# W_SENTIMENT=0.25
# W_RECOMMENDATION=0.20

# --- Clustering ---
# CLUSTER_ALGO=hdbscan
# CLUSTER_K=6
# CLUSTER_MIN_SIZE=5

# --- Logging ---
LOG_LEVEL=INFO
